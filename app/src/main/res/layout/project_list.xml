<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/projectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="dfsfsdfdsfdsfds"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            style="@style/Regular"
            android:textStyle="bold"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:weightSum="1"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"/>
        <ImageView
            android:id="@+id/calenderImage"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.10"
            android:src="@drawable/calender"/>

        <TextView
            android:id="@+id/datetext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:textAlignment="viewStart"
            android:text="20/02/2018"
            style="@style/Regular">
        </TextView>
        <ImageView
            android:id="@+id/clockicon"
            android:layout_weight="0.10"
            android:layout_width="0dp"
            android:layout_marginTop="1dp"
            android:layout_height="20dp"
            android:src="@drawable/clock"/>

        <TextView
            android:id="@+id/txtviewtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:text="10:20 am"
            style="@style/Regular" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/white"
        android:weightSum="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/clientImage"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/client"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="1dp"
            android:layout_marginTop="13dip"
            android:background="@color/quortise" />

        <TextView
            android:id="@+id/clientName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="4dip"
            android:layout_weight="0.68"
            android:text="John Dow"
            style="@style/Regular" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/storeImage"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/storeicon"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="1dp"
            android:layout_marginTop="13dip"
            android:background="@color/quortise" />

        <TextView
            android:id="@+id/storename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="4dip"
            android:layout_weight="0.68"
            android:text="John Darwin"
            style="@style/Regular" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/locationImage"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:src="@drawable/location"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="1dp"
            android:layout_marginTop="13dip"
            android:background="@color/quortise" />

        <TextView
            android:id="@+id/LocationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="4dip"
            android:layout_weight="0.68"
            android:text="John Darw"
            style="@style/Regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <View
            android:id="@+id/bottomborder"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@color/quortise"/>
    </LinearLayout>
</LinearLayout>